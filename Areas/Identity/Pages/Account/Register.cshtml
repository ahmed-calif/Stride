@page
@model Stride.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - Stride</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body class="bg-dark">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card border-0 shadow rounded-3 bg-dark">
                    <div class="card-body p-4 p-sm-5">
                        <h2 class="text-center mb-4 fw-bold text-white">Create an Account</h2>
                        
                        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                            
                            <div class="mb-3">
                                <label asp-for="Input.Username" class="form-label text-light">Username</label>
                                <input asp-for="Input.Username" class="form-control py-2 bg-dark text-light border-secondary" autocomplete="username" aria-required="true" placeholder="username" />
                                <span asp-validation-for="Input.Username" class="text-danger"></span>
                            </div>
                            
                            <div class="mb-3">
                                <label asp-for="Input.Email" class="form-label text-light">Email</label>
                                <input asp-for="Input.Email" class="form-control py-2 bg-dark text-light border-secondary" autocomplete="email" aria-required="true" placeholder="name@example.com" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                              
                            <div class="mb-3">
                                <label asp-for="Input.UserGender" class="form-label text-light">Gender</label>
                                <select asp-for="Input.UserGender" class="form-select py-2 bg-dark text-light border-secondary" aria-required="false">
                                    <option value="">Select Gender (Optional)</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Other">Other</option>
                                </select>
                                <span asp-validation-for="Input.UserGender" class="text-danger"></span>
                            </div>
                            
                            <div class="mb-3">
                                <label asp-for="Input.City" class="form-label text-light">City</label>
                                <input asp-for="Input.City" class="form-control py-2 bg-dark text-light border-secondary" placeholder="Your city" />
                                <span asp-validation-for="Input.City" class="text-danger"></span>
                            </div>
                            
                            <div class="mb-3">
                                <label asp-for="Input.PostalCode" class="form-label text-light">Postal Code</label>
                                <input asp-for="Input.PostalCode" class="form-control py-2 bg-dark text-light border-secondary" placeholder="Your postal code" />
                                <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                            </div>
                            
                            <div class="mb-3">
                                <label asp-for="Input.Password" class="form-label text-light">Password</label>
                                <input asp-for="Input.Password" class="form-control py-2 bg-dark text-light border-secondary" autocomplete="new-password" aria-required="true" placeholder="password" type="password" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            
                            <div class="mb-3">
                                <label asp-for="Input.ConfirmPassword" class="form-label text-light">Confirm Password</label>
                                <input asp-for="Input.ConfirmPassword" class="form-control py-2 bg-dark text-light border-secondary" autocomplete="new-password" aria-required="true" placeholder="password" type="password" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                            
                            <div class="d-grid">
                                <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg rounded-3 py-2">Sign up</button>
                            </div>
                            
                            <div class="text-center mt-3">
                                <p>
                                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-info">Already have an account? Sign in</a>
                                </p>
                            </div>
                        </form>

                        @if (Model.ExternalLogins?.Count > 0)
                        {
                            <div class="mt-4">
                                <div class="d-flex align-items-center mb-3">
                                    <hr class="flex-grow-1 border-secondary">
                                    <span class="px-2 text-secondary small">OR SIGN UP WITH</span>
                                    <hr class="flex-grow-1 border-secondary">
                                </div>
                                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                    <div class="d-grid gap-2">
                                        @foreach (var provider in Model.ExternalLogins!)
                                        {
                                            <button type="submit" class="btn btn-outline-light py-2" name="provider" value="@provider.Name" title="Sign up using your @provider.DisplayName account">
                                                @if (provider.Name.ToLower() == "google")
                                                {
                                                    <i class="bi bi-google me-2"></i>
                                                }
                                                else if (provider.Name.ToLower() == "facebook")
                                                {
                                                    <i class="bi bi-facebook me-2"></i>
                                                }
                                                else if (provider.Name.ToLower() == "microsoft")
                                                {
                                                    <i class="bi bi-microsoft me-2"></i>
                                                }
                                                else if (provider.Name.ToLower() == "twitter")
                                                {
                                                    <i class="bi bi-twitter-x me-2"></i>
                                                }
                                                Sign up with @provider.DisplayName
                                            </button>
                                        }
                                    </div>
                                </form>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>