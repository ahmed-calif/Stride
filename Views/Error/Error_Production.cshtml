@{
    ViewData["Title"] = "Error";
    Layout = "~/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Error - Stride</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .custom-bg {
            background-color: #f8f9fa;
            min-height: 100vh;
        }
        .custom-btn:hover {
            background-color: #e9ecef;
        }
    </style>
</head>
<body>
    <div class="custom-bg text-dark">
        <div class="d-flex align-items-center justify-content-center min-vh-100 px-2">
            <div class="text-center">
                <h1 class="display-1 fw-bold">@(ViewData["StatusCode"] ?? "Error")</h1>
                <p class="fs-2 fw-medium mt-4">Oops! Something went wrong</p>
                <p class="mt-4 mb-5">We're sorry, but we encountered an unexpected issue.</p>
                <a href="/" class="btn btn-light fw-semibold rounded-pill px-4 py-2 custom-btn">
                    Go Home
                </a>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>