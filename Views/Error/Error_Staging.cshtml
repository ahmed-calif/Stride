@model int
@{
    ViewData["Title"] = "Error " + Model;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" 
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" 
      crossorigin="anonymous" />
<link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-8">
            <div class="card border-warning shadow">
                <div class="card-header bg-warning text-dark">
                    <h2 class="m-0">HTTP Error @Model</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <p><strong>Staging Environment Notice:</strong> This is the staging environment. Some diagnostic information is available.</p>
                    </div>
                    
                    <h4 class="mb-3">Error Description</h4>
                    
                    <div class="alert alert-secondary">
                        @switch (Model)
                        {
                            case 400:
                                <p>Bad Request - The server cannot process the request due to a client error.</p>
                                break;
                            case 401:
                                <p>Unauthorized - Authentication is required and has failed or has not been provided.</p>
                                break;
                            case 403:
                                <p>Forbidden - The server understood the request but refuses to authorize it.</p>
                                break;
                            case 404:
                                <p>Not Found - The requested resource could not be found.</p>
                                break;
                            case 405:
                                <p>Method Not Allowed - The request method is not supported for the requested resource.</p>
                                break;
                            case 500:
                                <p>Internal Server Error - The server encountered an unexpected condition that prevented it from fulfilling the request.</p>
                                break;
                            case 502:
                                <p>Bad Gateway - The server was acting as a gateway or proxy and received an invalid response from the upstream server.</p>
                                break;
                            case 503:
                                <p>Service Unavailable - The server is currently unable to handle the request due to temporary overloading or maintenance.</p>
                                break;
                            case 504:
                                <p>Gateway Timeout - The server was acting as a gateway or proxy and did not receive a timely response from the upstream server.</p>
                                break;
                            default:
                                <p>An error occurred with status code @Model.</p>
                                break;
                        }
                    </div>
                    
                    <div class="mt-4">
                        <h5>Request Information</h5>
                        <ul class="list-group mb-4">
                            <li class="list-group-item"><strong>Request ID:</strong> <code>@Context.TraceIdentifier</code></li>
                            <li class="list-group-item"><strong>Path:</strong> <code>@Context.Request.Path</code></li>
                            <li class="list-group-item"><strong>Time:</strong> @DateTime.Now</li>
                        </ul>
                    </div>
                    
                    <hr>
                    
                    <div class="text-center mt-4">
                        <a href="/" class="btn btn-primary me-2">Return Home</a>
                        <button onclick="window.history.back();" class="btn btn-outline-secondary">Go Back</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" 
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" 
        crossorigin="anonymous"></script>
<script src="~/js/site.min.js" asp-append-version="true"></script>