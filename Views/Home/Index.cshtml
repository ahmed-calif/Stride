@{
    Layout = "_LandingLayout";
}

<div class="container mt-5">
    <div class="row align-items-center">
        <div class="col-lg-6">
            <h1 class="display-3 fw-bold mb-4">Transform Your Goals<br>into Reality</h1>
            <p class="lead text-muted mb-5">Join thousands of achievers who have unlocked their potential and reached their targets with our proven strategies and supportive community.</p>
            <a asp-controller="Auth" asp-action="Register" class="btn btn-primary btn-lg px-4">Get Started Today</a>
        </div>  
        <div class="col-lg-6">
            <img src="~/download.png" alt="Goals Target" class="img-fluid" width="700">
        </div>
    </div>
</div>

<div class="container my-5 py-5">
    <div class="row g-5">
        <div class="col-md-4">
            <div class="d-flex flex-column">
                <svg class="text-primary mb-3" width="24" height="24" viewBox="0 0 24 24">
                    <circle cx="12" cy="12" r="10" fill="none" stroke="currentColor" stroke-width="2"/>
                    <circle cx="12" cy="12" r="6" fill="none" stroke="currentColor" stroke-width="2"/>
                    <circle cx="12" cy="12" r="2" fill="currentColor"/>
                </svg>
                <h3 class="h4 mb-3">Set Clear Goals</h3>
                <p class="text-muted">Define your objectives with our structured goal-setting framework</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="d-flex flex-column">
                <svg class="text-primary mb-3" width="24" height="24" viewBox="0 0 24 24">
                    <path d="M3 20h18v-2H3v2zM9 2v12l-4-4-4 4V2h8z" fill="currentColor"/>
                </svg>
                <h3 class="h4 mb-3">Track Progress</h3>
                <p class="text-muted">Monitor your advancement with intuitive tracking tools</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="d-flex flex-column">
                <svg class="text-primary mb-3" width="24" height="24" viewBox="0 0 24 24">
                    <path d="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5s-3 1.34-3 3 1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V18h14v-1.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05.02.01.03.03.04.04 1.14.83 1.93 1.94 1.93 3.41V18h6v-1.5c0-2.33-4.67-3.5-7-3.5z" fill="currentColor"/>
                </svg>
                <h3 class="h4 mb-3">Community Support</h3>
                <p class="text-muted">Connect with like-minded individuals on the same journey</p>
            </div>
        </div>
    </div>
</div>

<div class="container my-5">
    <div class="row text-center g-4">
        <div class="col-md-4">
            <h2 class="display-4 fw-bold text-primary mb-2">90%</h2>
            <p class="text-muted">Goal Achievement Rate</p>
        </div>
        <div class="col-md-4">
            <h2 class="display-4 fw-bold text-primary mb-2">10k+</h2>
            <p class="text-muted">Active Members</p>
        </div>
        <div class="col-md-4">
            <h2 class="display-4 fw-bold text-primary mb-2">50k+</h2>
            <p class="text-muted">Goals Completed</p>
        </div>
    </div>
</div>