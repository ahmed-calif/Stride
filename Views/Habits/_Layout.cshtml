<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Stride</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
   <div class="container-fluid d-flex flex-column min-vh-100">
        <div class="container mt-4">
            <nav class="navbar navbar-expand navbar-light bg-light rounded-pill py-2 w-auto mx-auto" style="max-width: 500px;">
                <div class="container-fluid px-2">
                    <div class="navbar-nav d-flex flex-row justify-content-between w-100">
                        <a class="nav-link px-3 text-dark" href="/Dashboard/">Dashboard</a>
                        <a class="nav-link px-3 text-dark" href="/Goals/">Goals</a>
                        <a class="nav-link px-3 text-dark" href="/Habits/">Habits</a>
                        <a class="nav-link px-3 text-dark" href="/Settings/">Settings</a>
                    </div>
                </div>
            </nav>
        </div>
            <main class="flex-grow-1 p-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>